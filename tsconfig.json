{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "../node_modules/*"
      ]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}
